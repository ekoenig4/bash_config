
if [ -f /etc/bashrc ]; then
   source /etc/bashrc
fi

export PATH=$HOME/bin:$PATH

alias cmsset="source /cvmfs/cms.cern.ch/cmsset_default.sh"
export X509_USER_PROXY=$HOME/x509up_u$(id -u)
export X509_CERT_DIR=/cvmfs/cms.cern.ch/grid/etc/grid-security/certificates
export X509_VOMS_DIR=/cvmfs/cms.cern.ch/grid/etc/grid-security/vomsdir
export VOMS_USERCONF=/cvmfs/cms.cern.ch/grid/etc/vomses
alias crabenv='source /cvmfs/cms.cern.ch/crab3/crab.sh'

function launch_jupyter() {
    launch_jupyter_notebook &> $HOME/jupyter.log 
}

function cdl () {
	 cd $(readlink -f $1)
}

function averyinfo() {
    slurmInfo avery
}

module load conda